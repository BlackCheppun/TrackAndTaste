    android:id="@+id/nav_conf"
    app:startDestination="@id/home">

    <fragment
        android:id="@+id/home"
        android:name="com.mobilecomputing.trackandtaste.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home"
