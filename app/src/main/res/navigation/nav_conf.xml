    </fragment>

    <fragment
        android:label="Map"
        android:name="com.mobilecomputing.trackandtaste.MapFragment"
        android:id="@+id/map"
        tools:layout="@layout/fragment_map"
        />

    <fragment
        android:label="Settings"
        android:name="com.mobilecomputing.trackandtaste.SettingsFragment"
        android:id="@+id/settings"
